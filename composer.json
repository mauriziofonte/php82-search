{
  "name": "vfou/php-search",
  "type": "library",
  "description": "A Lucene-inspired PHP Search engine library",
  "keywords": [
    "search", "search engine", "php"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Vincent Foulon",
      "email": "sup.vfoulon@gmail.com"
    },
    {
      "name": "Maurizio Fonte",
      "email": "fonte.maurizio@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.3",
    "wamania/php-stemmer": "^3.0"
  },
  "require-dev": {
		"friendsofphp/php-cs-fixer": "^3.4",
		"phpstan/phpstan": "^1.9"
	},
  "autoload": {
    "psr-4": {
      "MFonte\\Search\\": "src/"
    }
  },
  "scripts": {
    "fix": "@php vendor/bin/php-cs-fixer fix",
    "analyse": "@php vendor/bin/phpstan analyse src --level 4"
  }
}
